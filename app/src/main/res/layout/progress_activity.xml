<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_gravity="center"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".dialog.ProgressActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fishmarker"
        android:textSize="25dp"
        android:textColor="@color/colorBlack"
        android:id="@+id/textview"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/waveLoading"
        />


    <me.itangqi.waveloadingview.WaveLoadingView
        android:id="@+id/waveLoading"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"


        app:wlv_progressValue="0"
        app:wlv_waveAmplitude="40"
        app:wlv_waveColor="@color/colorPrimary"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="238dp">

    </me.itangqi.waveloadingview.WaveLoadingView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorTransparent"
        android:src="@drawable/fish100" />

    </LinearLayout>




</RelativeLayout>
